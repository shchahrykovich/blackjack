<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>@ViewBag.Title</title>
    <link href="@Links.Content.css.layout_css" rel="stylesheet" type="text/css" />
    <link href="@Links.Content.css.game_css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="page">
        <div class="header">
            @RenderSection("Header", false)
        </div>
        <div class="gametable" id="gametable">
            @RenderBody()
        </div>
        <p class="copy">
            &copy; 2010 dotDigitalGroup.</p>
    </div>
    @RenderSection("Banner", false)
    @if (Context.IsDebuggingEnabled)
    {
        <script type="text/javascript" src="@(Links.Scripts.jquery_1_6_1_js)"> </script>
    }
    else
    {
        <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.1.min.js"> </script>
    }
    @RenderSection("Scripts", false)
</body>
</html>
